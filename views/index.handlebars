<img src="/public/assets/img/burger.jpg" width="500px" id="frontPage_burger">
<h1> Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="button btn-success" type="submit">Devour the Burger</button><BR>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group text-center">
                    <label for="ca">
                        <h3>Add a burger</h3>
                    </label>
                    <input type="text" id="ca" name="name">
                    <button class="button btn-success" type="submit">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <h5>Devoured Burgers</h5>
            <br>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}

                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                    </form>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>